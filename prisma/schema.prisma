generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String?
  email      String   @unique
  cnic       String?  @unique
  phone      String?
  address    String?
  city       String?
  password   String
  role       Role     @default(user)
  created_at DateTime @default(now())

  requests       Request[]
  passwordResets PasswordReset[]
  donations      Donation[]
  surveys        Survey[]

  @@map("users")
}

model Admin {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  cnic       String   @unique
  password   String
  created_at DateTime @default(now())

  @@map("admins")
}

model Donors {
  id                Int          @id @default(autoincrement())
  name              String
  organization_name String?
  contact_number    String?
  email             String       @unique
  cnic              String       @unique
  password          String
  securityQuestion  String?
  securityAnswer    String?
  status            DonorStatus  @default(PENDING)
  created_at        DateTime     @default(now())
  updated_at        DateTime     @updatedAt

  @@map("donors")
}


model Request {
  id             Int           @id @default(autoincrement())
  user_id        Int
  type           String
  description    String?
  status         String        @default("pending")
  created_at     DateTime      @default(now())
  updated_at     DateTime      @updatedAt
  full_name      String?
  father_name    String?
  cnic_number    String?
  marital_status String?
  family_count   Int?
  adult_member   Int?
  matric_member  Int?
  home_rent      String?
  fridge         String?
  monthly_income Int?
  cnic_front     String?
  cnic_back      String?
  document       String?
  reason         String?
  repayment_time String?
  rejection_reason String?
  verification_complete Boolean @default(false)
  user           User          @relation(fields: [user_id], references: [id], onDelete: Cascade)
  surveys        Survey[]

  @@map("requests")
}


model PasswordReset {
  id         Int      @id @default(autoincrement())
  user_id    Int
  token      String
  expires_at DateTime
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("password_resets")
}

model Donation {
  id     Int      @id @default(autoincrement())
  userId Int
  amount Float
  date   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("donations")
}

enum Role {
  user
  donor
  admin
   SURVEY_OFFICER
}

model Survey {
  id            Int          @id @default(autoincrement())
  application   Request      @relation(fields: [applicationId], references: [id])
  applicationId Int
  officer       User?        @relation(fields: [officerId], references: [id])
  officerId     Int?
  status        String       // Pending, In-Progress, Completed
  recommendation String?     // Eligible, Not Eligible, Needs Info
  report        String?      // Detailed notes
  attachments   SurveyAttachment[]
  sentToAdmin   Boolean      @default(false)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model SurveyAttachment {
  id        Int     @id @default(autoincrement())
  url       String
  survey    Survey  @relation(fields: [surveyId], references: [id])
  surveyId  Int
  uploadedAt DateTime @default(now())
}

enum RequestType {
  aid
  loan
  microfinance
  medical
  marriage
  education
}

enum RequestStatus {
  pending
  approved
  rejected
}

enum DonorStatus {
  PENDING
  ACTIVE
  REJECTED
}

